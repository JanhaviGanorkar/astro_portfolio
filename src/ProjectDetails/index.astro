---
import { projects } from '../data/constants';
---

<section id="projects" class="container">
  <h1>Projects</h1>
  <p class="subtitle">I have worked on a wide range of projects. Here are some of my projects.</p>
  
  <div class="projects-grid">
    {projects.map((project) => (
      <article class="project-card animate-on-scroll skeleton">
        <div class="card-content">
          <h3>{project.title}</h3>
          <p class="date">{project.date}</p>
          <p class="description">{project.description}</p>
          <div class="tags">
            {project.tags.map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
          <div class="links">
            <a href={project.github} target="_blank" rel="noopener noreferrer" class="button github">
              View Code
              <span class="sr-only">Opens in a new tab</span>
            </a>
            {project.link && (
              <a href={project.link} target="_blank" rel="noopener noreferrer" class="button live">
                Live Demo
                <span class="sr-only">Opens in a new tab</span>
              </a>
            )}
          </div>
        </div>
      </article>
    ))}
  </div>
</section>

<style>
  .container {
    padding: 80px 20px;
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  h1 {
    font-size: 42px;
    font-weight: 600;
    margin-bottom: 20px;
    color: #F2F3F4;
  }

  .subtitle {
    font-size: 18px;
    color: #B1B2B3;
    margin-bottom: 40px;
  }

  /* Filter buttons removed */

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 30px;
    padding: 20px 0;
  }

  .project-card {
    background: #171721;
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease;
    border: 1px solid rgba(133, 76, 230, 0.3);
  }

  .project-card:hover {
    transform: translateY(-5px);
  }

  .card-content {
    padding: 24px;
  }

  .card-content h3 {
    font-size: 24px;
    font-weight: 600;
    color: #F2F3F4;
    margin-bottom: 8px;
  }

  .date {
    font-size: 14px;
    color: #854CE6;
    margin-bottom: 16px;
  }

  .description {
    font-size: 16px;
    color: #B1B2B3;
    margin-bottom: 20px;
    line-height: 1.5;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 24px;
  }

  .tag {
    padding: 6px 12px;
    background: rgba(133, 76, 230, 0.1);
    color: #854CE6;
    border-radius: 15px;
    font-size: 14px;
  }

  .links {
    display: flex;
    gap: 12px;
  }

  .button {
    flex: 1;
    padding: 10px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .github {
    background: transparent;
    color: #854CE6;
    border: 1px solid #854CE6;
  }

  .live {
    background: #854CE6;
    color: white;
  }

  .button:hover {
    opacity: 0.8;
    transform: translateY(-2px);
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
  }

  @media (max-width: 768px) {
    .container {
      padding: 60px 16px;
    }

    h1 {
      font-size: 32px;
    }

    .subtitle {
      font-size: 16px;
    }

    .projects-grid {
      grid-template-columns: 1fr;
    }

    .card-content h3 {
      font-size: 20px;
    }
  }
</style>

<script>
  // Filter functionality removed
</script>
