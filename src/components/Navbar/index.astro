---
import { Bio } from '../../data/constants';
---

<nav>
  <div class="navbar-container">
    <div class="nav-logo">
      <a href="/">
        <span>Portfolio</span>
      </a>
    </div>
    <div class="mobile-menu">
      <button id="menu-button" aria-label="Open menu">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M3 12H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M3 6H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M3 18H21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
    <div class="nav-items">
      <a href="#about">About</a>
      <a href="#skills">Skills</a>
      <a href="#projects">Projects</a>
      <a href="#achievements">Achievements</a>
      <a href="#education">Education</a>
      <a href="#contact">Contact</a>
    </div>
    <div class="github-btn">
      <a href={Bio.github} class="github_a" target="_blank">Github</a>
    </div>
    <div id="mobile-menu" class="mobile-menu-items">
      <a href="#about">About</a>
      <a href="#skills">Skills</a>
      <a href="#projects">Projects</a>
      <a href="#achievements">Achievements</a>
      <a href="#education">Education</a>
      <a href="#contact">Contact</a>
      <a href={Bio.github} target="_blank" class="github-btn mobile">Github Profile</a>
    </div>
  </div>
</nav>

<style>
  nav {
    background-color: #1C1C27;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .navbar-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 60px;
    z-index: 1;
    width: 100%;
    padding: 0 24px;
    max-width: 1200px;
  }

  .nav-logo {
    width: 80%;    
    padding: 0 6px;
  }

  .nav-logo a {
    display: flex;
    align-items: center;
    text-decoration: none;
  }

  .nav-logo span {
    color: white;
    font-weight: bold;
    font-size: 18px;
    margin-left: 4px;
  }

  .nav-items {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 32px;
    padding: 0 6px;
    list-style: none;
  }

  .nav-items a {
    color: #fff;
    font-weight: 500;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.2s ease-in-out;
  }

  .nav-items a:hover {
    color: #854CE6;
  }
  .github-btn {
    flex: 1;
    text-align: center;
    width: 10%;
    font-size: 16px;
    font-weight: 600;
    margin-top: 12px;
    padding: 12px;
    border-radius: 30px;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
    color: #854CE6;
    border: 1.5px solid #854CE6;
    background: transparent;
  }
  .github-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 10px rgba(133, 76, 230, 0.2);
  }


  .github_a{
    text-decoration: none;
    color: #854CE6;
  }
  
  
  .mobile-menu {
    display: none;
  }

  .mobile-menu-items {
    display: none;
  }

  @media screen and (max-width: 768px) {
    .nav-items {
      display: none;
    }

    .github-btn {
      display: none;
    }

    .mobile-menu {
      display: block;
      position: absolute;
      top: 0;
      right: 0;
      transform: translate(-100%, 60%);
      cursor: pointer;
      color: white;
    }

    .mobile-menu-items {
      display: none;
      flex-direction: column;
      justify-content: center;
      gap: 16px;
      position: absolute;
      top: 80px;
      right: 0;
      width: 100%;
      padding: 12px 40px 24px 40px;
      background: rgba(17, 17, 17, 0.95);
      transition: all 0.3s ease-in-out;
      border-radius: 0 0 20px 20px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .mobile-menu-items.open {
      display: flex;
    }

    .mobile-menu-items a {
      color: #fff;
      font-weight: 500;
      cursor: pointer;
      text-decoration: none;
      transition: all 0.2s ease-in-out;
    }

    .mobile-menu-items a:hover {
      color: #854CE6;
    }

    .mobile-menu-items .github-btn.mobile {
      padding: 10px 16px;
      background: #854CE6;
      color: white;
      width: max-content;
      text-decoration: none;
    }
  }
</style>

<script>
  const menuButton = document.getElementById('menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('open');
  });

  // Close menu when clicking outside
  document.addEventListener('click', (e) => {
    if (!menuButton?.contains(e.target as Node) && !mobileMenu?.contains(e.target as Node)) {
      mobileMenu?.classList.remove('open');
    }
  });
</script>