<style>
  .wrapper {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    overflow: hidden;
    pointer-events: none;
  }

  .gradient-blob {
    position: absolute;
    width: 800px;
    height: 800px;
    background: radial-gradient(
      circle at center,
      rgba(133, 76, 230, 0.15) 0%,
      rgba(133, 76, 230, 0.05) 40%,
      transparent 70%
    );
    border-radius: 50%;
    filter: blur(40px);
    animation: float 10s ease-in-out infinite;
    top: -200px;
    right: -100px;
  }

  .gradient-blob.secondary {
    width: 600px;
    height: 600px;
    background: radial-gradient(
      circle at center,
      rgba(133, 76, 230, 0.1) 0%,
      rgba(133, 76, 230, 0.03) 40%,
      transparent 70%
    );
    bottom: -100px;
    left: -100px;
    animation: float2 8s ease-in-out infinite;
  }

  .gradient-lines {
    position: absolute;
    width: 100%;
    height: 100%;
    background: repeating-linear-gradient(
      45deg,
      rgba(133, 76, 230, 0.02) 0px,
      rgba(133, 76, 230, 0.02) 1px,
      transparent 1px,
      transparent 10px
    );
    opacity: 0.5;
    animation: lines 20s linear infinite;
  }

  .bg-container {
    width: 600px;
    height: 500px;
    position: absolute;
    top: 0;
    right: 0;
    z-index: -1;
  }

  .BgAnimation__svg {
    width: 100%;
    height: 100%;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) scale(1) rotate(0deg);
    }
    50% {
      transform: translateY(-30px) scale(1.05) rotate(5deg);
    }
  }

  @keyframes float2 {
    0%, 100% {
      transform: translateY(0) scale(1) rotate(0deg);
    }
    50% {
      transform: translateY(30px) scale(0.95) rotate(-5deg);
    }
  }

  @keyframes lines {
    0% {
      background-position: 0 0;
    }
    100% {
      background-position: 100px 100px;
    }
  }

  @media (max-width: 768px) {
    .gradient-blob {
      width: 400px;
      height: 400px;
    }

    .gradient-blob.secondary {
      width: 300px;
      height: 300px;
    }
  }
</style>
