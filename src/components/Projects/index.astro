---
import { projects } from '../../data/constants';

const projectsList = projects || [];
---

<section id="projects">
  <div class="container">
    <div class="wrapper">
      <h2 class="title">Projects</h2>
      <p class="desc">I have worked on a wide range of projects. Here are some of my projects.</p>
      
      <div class="toggle-group">
        <button class="toggle-button active" data-category="all">All</button>
        <div class="divider"></div>
        <button class="toggle-button" data-category="website">WEB SITE</button>
      </div>

      <div class="card-container">
        {projectsList.length > 0 ? projectsList.map((project) => (
          <div class="project-card" data-category={project.category}>
            <img src={project.image || ''} alt={project.title} class="project-image"/>
            <div class="tags">
              {(project.tags || []).map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
            <div class="details">
              <h3 class="project-title">{project.title}</h3>
              <p class="date">{project.date}</p>
              <p class="description">{project.description}</p>
            </div>
            <div class="links">
              <a href={project.github} target="_blank" rel="noopener noreferrer" class="button github">View Code</a>
              {project.link && (
                <button>
                  <a href={project.link} target="_blank" rel="noopener noreferrer" class="button live">Live Demo</a>
                  </button>
              )}
            </div>
          </div>
        )) : (
          <p class="no-projects">No projects to display</p>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  #projects {
    background: linear-gradient(343.07deg, rgba(132, 59, 206, 0.06) 5.71%, rgba(132, 59, 206, 0) 64.83%);
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    z-index: 1;
    align-items: center;
    clip-path: polygon(0 0, 100% 0, 100% 100%,100% 98%, 0 100%);
    padding: 80px 0;
  }

  .container {
    width: 100%;
    max-width: 1350px;
    padding: 0 30px;
  }

  .wrapper {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
  }

  .title {
    font-size: 42px;
    text-align: center;
    font-weight: 600;
    margin-top: 20px;
    color: #F2F3F4;
  }

  .desc {
    font-size: 18px;
    text-align: center;
    max-width: 600px;
    color: #B1B2B3;
  }

  .toggle-group {
    display: flex;
    border: 1.5px solid #854CE6;
    color: #854CE6;
    font-size: 16px;
    border-radius: 12px;
    font-weight: 500;
    margin: 22px 0;
    gap: 12px;
  }

  .toggle-button {
    padding: 8px 18px;
    border-radius: 6px;
    cursor: pointer;
    background: transparent;
    border: none;
    color: inherit;
    font-size: inherit;
  }

  .toggle-button:hover,
  .toggle-button.active {
    background: rgba(133, 76, 230, 0.2);
  }

  .divider {
    width: 1.5px;
    background: #854CE6;
  }

  .card-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 28px;
    flex-wrap: wrap;
    margin-top: 20px;
  }

  .project-card {
    width: 330px;
    height: 490px;
    background: #171721;
    border: 0.1px solid #854CE6;
    box-shadow: rgba(23, 92, 230, 0.15) 0px 4px 24px;
    border-radius: 16px;
    padding: 18px 24px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .project-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 0 50px 4px rgba(0,0,0,0.6);
    filter: brightness(1.1);
  }

  .project-image {
    width: 100%;
    height: 180px;
    background: #ffffff;
    border-radius: 10px;
    box-shadow: 0 0 16px 2px rgba(0,0,0,0.3);
    object-fit: cover;
  }

  .tags {
    width: 100%;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 8px;
    margin: 8px 0;
  }

  .tag {
    font-size: 12px;
    font-weight: 400;
    color: #854CE6;
    background: rgba(133, 76, 230, 0.1);
    padding: 2px 8px;
    border-radius: 10px;
  }

  .details {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 0px;
    padding: 0px 2px;
  }

  .project-title {
    font-size: 20px;
    font-weight: 600;
    color: #F2F3F4;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
  }

  .date {
    font-size: 12px;
    margin-left: 2px;
    font-weight: 400;
    color: rgba(242, 243, 244, 0.8);
  }

  .description {
    font-weight: 400;
    color: #B1B2B3;
    overflow: hidden;
    margin-top: 8px;
    display: -webkit-box;
    max-width: 100%;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
  }

  .links {
    display: flex;
    gap: 12px;
    margin-top: 16px;
  }

  .button {
    flex: 1;
    text-align: center;
    width: 10%;
    font-size: 16px;
    font-weight: 600;
    color: #F2F3F4;
    margin-top: 12px;
    padding: 12px;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
    background: hsla(271, 100%, 50%, 1);
    background: linear-gradient(225deg, hsla(271, 100%, 50%, 1) 0%, hsla(294, 100%, 50%, 1) 100%);
    box-shadow: 20px 20px 60px #1F2634;
    transition: all 0.2s ease-in-out !important;
    color: white;
    border: none;
  }

  .button:hover {
    transform: scale(1.05);
    transition: all 0.4s ease-in-out;
    box-shadow: 20px 20px 60px #1F2634;
    filter: brightness(1);
  }

  .github {
    background: transparent;
    border: 1.5px solid #854CE6;
    color: #854CE6;
  }

  .github:hover {
    background: rgba(133, 76, 230, 0.1);
    transform: scale(1.05);
  }

  button {
    background: var(--button-bg);
    color: white;
    border: none;
    padding: 12px;
    border-radius: 8px;
    font-size: 18px;
    cursor: pointer;
    margin-top: 12px;
    transition: all 0.2s ease-in-out;
  }
  button:hover {
    transform: scale(1.05);
    box-shadow: 20px 20px 60px #1F2634;
  }

  .live {
    /* background: #854CE6; */
  }

  @media (max-width: 960px) {
    .title {
      font-size: 32px;
      margin-top: 12px;
    }

    .desc {
      font-size: 16px;
      margin-top: 12px;
    }
  }

  @media (max-width: 640px) {
    .project-card {
      width: 300px;
      height: 460px;
      padding: 15px 20px;
    }

    .button {
      font-size: 14px;
      padding: 10px 14px;
    }
  }
</style>

<script>
  function initProjectFilters() {
    const buttons = document.querySelectorAll('.toggle-button');
    const projects = document.querySelectorAll('.project-card');

    buttons.forEach(button => {
      button.addEventListener('click', () => {
        // Update active button
        buttons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');

        // Filter projects
        const category = button.getAttribute('data-category');
        projects.forEach(project => {
          if (category === 'all' || project.getAttribute('data-category') === category) {
            project.style.display = 'block';
          } else {
            project.style.display = 'none';
          }
        });
      });
    });
  }

  // Initialize on page load
  document.addEventListener('astro:page-load', initProjectFilters);
</script>
