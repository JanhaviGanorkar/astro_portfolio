<style>
  footer {
    padding: 24px 0;
    background: #171721;
    border-top: 1px solid rgba(133, 76, 230, 0.3);
  }

  .footer-wrapper {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
  }

  .logo {
    font-size: 20px;
    font-weight: bold;
    color: #B1B2B3;
  }

  nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 16px;
  }

  nav a {
    color: #B1B2B3;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  nav a:hover {
    color: #854CE6;
    transform: translateY(-2px);
  }

  .social-links {
    display: flex;
    gap: 16px;
  }

  .social-links a {
    color: #B1B2B3;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .social-links a:hover {
    color: #854CE6;
    transform: translateY(-2px);
  }

  .copyright {
    text-align: center;
    color: #B1B2B3;
    font-size: 14px;
  }

  @media (max-width: 768px) {
    footer {
      padding: 16px 0;
    }

    .copyright {
      font-size: 12px;
    }
  }
</style>