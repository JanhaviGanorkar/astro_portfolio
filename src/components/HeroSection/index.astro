---
import { Bio } from '../../data/constants';
import HeroBgAnimation from '../HeroBgAnimation/index.astro';
import TypingText from '../TypingText.astro';

const roles = [
  "Full Stack Developer",
  "Frontend Developer",
  "React Developer",
  "Python Developer",
  "Programmer"
];
---

<section id="about">
  <div class="hero-container">
    <div class="hero-bg">
      <HeroBgAnimation />
    </div>
    <div class="hero-inner">
      <div class="hero-left">
        <h1>Hi, I am <br /> {Bio.name}</h1>
        <div class="roles">
          I am a <TypingText roles={roles} />
        </div>
        <p class="description">{Bio.description}</p>
        <a href={Bio.resume} target="_blank" class="resume-btn">Check Resume</a>
      </div>
      <div class="hero-right">
        <img src="/images/HeroImage.jpg" alt="hero-image" />
      </div>
    </div>
  </div>
</section>

<style>
  #about {
    background: linear-gradient(343.07deg, rgba(132, 59, 206, 0.06) 5.71%, rgba(132, 59, 206, 0) 64.83%);
    display: flex;
    justify-content: center;
    position: relative;
    padding: 80px 30px;
    z-index: 1;
    clip-path: polygon(0 0, 100% 0, 100% 100%, 70% 95%, 0 100%);
  }

  .hero-container {
    width: 100%;
    max-width: 1360px;
    margin: 0 auto;
    z-index: 1;
    display: flex;
    justify-content: center;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: -1;
  }

  .hero-inner {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    max-width: 1100px;
  }

  .hero-left {
    width: 100%;
    order: 1;
  }

  .hero-right {
    width: 100%;
    display: flex;
    order: 2;
    justify-content: end;
    gap: 12px;
  }

  .hero-right img {
    position: relative;
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    border-radius: 50%;
    border: 2px solid #854CE6;
  }

  h1 {
    font-weight: 700;
    font-size: 50px;
    color: #F2F3F4;
    line-height: 68px;
  }

  .roles {
    font-weight: 600;
    font-size: 32px;
    display: flex;
    gap: 12px;
    color: #F2F3F4;
    line-height: 68px;
  }

  .description {
    font-size: 20px;
    line-height: 32px;
    margin-bottom: 42px;
    color: rgba(242, 243, 244, 0.95);
  }

  .resume-btn {
    display: inline-block;
    text-decoration: none;
    width: 95%;
    max-width: 300px;
    text-align: center;
    padding: 16px 0;
    border-radius: 20px;
    cursor: pointer;
    font-size: 20px;
    font-weight: 600;
    background: hsla(271, 100%, 50%, 1);
    background: linear-gradient(225deg, hsla(271, 100%, 50%, 1) 0%, hsla(294, 100%, 50%, 1) 100%);
    box-shadow: 20px 20px 60px #1F2634;
    color: white;
    transition: all 0.2s ease-in-out !important;
  }

  .resume-btn:hover {
    transform: scale(1.05);
    transition: all 0.4s ease-in-out;
    box-shadow: 20px 20px 60px #1F2634;
    filter: brightness(1);
  }

  @media (max-width: 960px) {
    .hero-inner {
      flex-direction: column;
    }

    .hero-left {
      order: 2;
      margin-bottom: 30px;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .hero-right {
      order: 1;
      justify-content: center;
      align-items: center;
      margin-bottom: 80px;
    }

    h1 {
      font-size: 40px;
      line-height: 48px;
      margin-bottom: 8px;
    }

    .roles {
      font-size: 22px;
      line-height: 48px;
      margin-bottom: 16px;
    }
  }

  @media (max-width: 640px) {
    #about {
      padding: 32px 16px;
    }

    .hero-right img {
      max-width: 280px;
      max-height: 280px;
    }

    .resume-btn {
      padding: 12px 0;
      font-size: 18px;
    }
  }
</style>