---
import { experiences } from '../../data/constants';
---

<section id="experience" aria-labelledby="experience-title">
  <div class="container">
    <h1 id="experience-title">Experience</h1>
    <div class="timeline" role="list">
      {(experiences || []).map((exp, index) => (
        <article 
          class="timeline-item animate-on-scroll skeleton" 
          role="listitem"
          style={`animation-delay: ${index * 0.2}s`}
        >

          <div class="content">
            <h2>{exp.role}</h2>
            <h3>{exp.comunity}</h3>
            <p class="date">{exp.date}</p>
            <p class="description">{exp.desc}</p>
            <div class="skills" aria-label="Technologies used">
              {exp.skills.map((skill) => (
                <span class="skill">{skill}</span>
              ))}
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  #experience {
    padding: 40px 0;
    background: linear-gradient(
      343.07deg,
      rgba(132, 59, 206, 0.06) 5.71%,
      rgba(132, 59, 206, 0) 64.83%
    );
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 20px;
  }

  h1 {
    font-size: 42px;
    font-weight: 600;
    text-align: center;
    margin-bottom: 40px;
    color: #F2F3F4;
  }

  .timeline {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .timeline-item {
    display: flex;
    gap: 20px;
    background: #171721;
    padding: 24px;
    border-radius: 10px;
    border: 0.1px solid #854CE6;
    transition: all 0.3s ease;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeIn 0.5s ease forwards;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .timeline-item.show {
    opacity: 1;
    transform: translateY(0);
  }

  .timeline-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 0 20px rgba(133, 76, 230, 0.1);
  }

  .company-logo {
    flex: 0 0 80px;
  }

  .company-logo img {
    width: 80px;
    height: 80px;
    border-radius: 10px;
    object-fit: cover;
  }

  .content {
    flex: 1;
  }

  .content h2 {
    font-size: 24px;
    font-weight: 600;
    color: #F2F3F4;
    margin-bottom: 8px;
  }

  .content h3 {
    font-size: 18px;
    font-weight: 500;
    color: #854CE6;
    margin-bottom: 8px;
  }

  .date {
    font-style: italic;
    color: #B1B2B3;
    margin-bottom: 12px;
  }

  .description {
    color: #B1B2B3;
    margin-bottom: 16px;
    line-height: 1.5;
  }

  .skills {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .skill {
    font-size: 14px;
    font-weight: 400;
    color: #F2F3F4;
    padding: 6px 12px;
    border-radius: 12px;
    background: rgba(133, 76, 230, 0.1);
    border: 1px solid #854CE6;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    white-space: nowrap;
  }

  .skill:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 10px rgba(133, 76, 230, 0.2);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 32px;
    }

    .timeline-item {
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: 16px;
      gap: 12px;
    }

    .company-logo {
      margin-bottom: 12px;
    }

    .company-logo img {
      width: 60px;
      height: 60px;
    }

    .content h2 {
      font-size: 20px;
      margin-bottom: 4px;
    }

    .content h3 {
      font-size: 16px;
      margin-bottom: 4px;
    }

    .skills {
      justify-content: center;
      gap: 6px;
    }

    .skill {
      font-size: 12px;
      padding: 4px 8px;
    }
  }
</style>

<script>
  // Add animation delay to timeline items
  const timelineItems = document.querySelectorAll('.timeline-item');
  timelineItems.forEach((item, index) => {
    item.style.animationDelay = `${index * 0.2}s`;
  });
</script>