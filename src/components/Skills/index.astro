---
import { skills } from '../../data/constants';
---

<section id="skills" aria-labelledby="skills-title">
  <div class="container">
    <h1 id="skills-title">Skills</h1>
    <div class="skills-grid">
      {(skills || []).map((skillCategory, index) => (
        <article 
          class="skill-card animate-on-scroll skeleton" 
          aria-labelledby={`category-${skillCategory.title}`}
          style={`animation-delay: ${index * 0.2}s`}
        >
          <h2 id={`category-${skillCategory.title}`}>{skillCategory.title}</h2>
          <div class="skill-list" role="list">
            {(skillCategory.skills || []).map((item) => (
              <div class="skill-item" role="listitem">
                <img src={item.image} alt={`${item.name} logo`} width="24" height="24" loading="lazy" />
                <span>{item.name}</span>
              </div>
            ))}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  #skills {
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    z-index: 1;
    padding: 40px 0px;
  }

  .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 40px 0px;
    width: 100%;
    max-width: 1100px;
    margin: 0 auto;
    gap: 12px;
  }

  h1 {
    font-size: 42px;
    text-align: center;
    font-weight: 600;
    margin-top: 20px;
    color: #F2F3F4;
  }

  .skills-grid {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    margin-top: 30px;
    gap: 30px;
    justify-content: center;
  }

  .skill-card {
    width: 100%;
    max-width: 500px;
    background: #171721;
    border: 0.1px solid #854CE6;
    box-shadow: rgba(23, 92, 230, 0.15) 0px 4px 24px;
    border-radius: 16px;
    padding: 18px 36px;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease both;
  }

  .skill-card.show {
    opacity: 1;
    transform: translateY(0);
  }

  .skill-card h2 {
    font-size: 28px;
    font-weight: 600;
    color: #F2F3F4;
    margin-bottom: 20px;
  }

  .skill-list {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 12px;
    margin-bottom: 20px;
  }

  .skill-item {
    font-size: 16px;
    font-weight: 400;
    color: #F2F3F4;
    border: 1px solid #854CE6;
    border-radius: 12px;
    padding: 12px 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    transform: translateY(0);
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .skill-item:hover {
    transform: translateY(-5px) scale(1.05);
    background: rgba(133, 76, 230, 0.15);
    box-shadow: 0 5px 15px rgba(133, 76, 230, 0.2);
  }

  .skill-item img {
    width: 24px;
    height: 24px;
    filter: grayscale(20%);
    transition: all 0.3s ease;
  }

  .skill-item:hover img {
    filter: grayscale(0%);
    transform: scale(1.15);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .skill-card {
      padding: 12px 24px;
      max-width: 400px;
    }

    .skill-card h2 {
      font-size: 24px;
    }

    .skill-item {
      font-size: 14px;
      padding: 8px 12px;
    }

    .skill-item img {
      width: 20px;
      height: 20px;
    }
  }

  @media (max-width: 500px) {
    .skill-card {
      max-width: 330px;
      padding: 15px;
    }

    h1 {
      font-size: 32px;
    }

    .skill-card h2 {
      font-size: 20px;
    }

    .skill-item {
      font-size: 13px;
      padding: 8px 12px;
    }

    .skill-item img {
      width: 18px;
      height: 18px;
    }
  }
</style>