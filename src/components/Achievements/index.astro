---
import { achievements } from "../../data/constants";
---

<section id="achievements">
  <div class="container">
    <div class="wrapper">
      <h2>Achievements</h2>
      <p class="subtitle">Recognition and accomplishments in my journey</p>

      <div class="achievements-grid">
        {
          achievements.map((achievement) => (
            <div class="timeline achievement-card">
              <div class="achievement-content">
                <h3>{achievement.title}</h3>
                {achievement.date && (
                  <span class="date">{achievement.date}</span>
                )}
                <p>{achievement.description}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  #achievements {
    padding: 80px 0;
    background: linear-gradient(
      343.07deg,
      rgba(132, 59, 206, 0.06) 5.71%,
      rgba(132, 59, 206, 0) 64.83%
    );
  }

  .timeline {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .timeline-item {
    display: flex;
    gap: 20px;
    background: #171721;
    padding: 24px;
    border-radius: 10px;
    border: 0.1px solid #854ce6;
    transition: all 0.3s ease;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeIn 0.5s ease forwards;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .timeline-item.show {
    opacity: 1;
    transform: translateY(0);
  }

  .timeline-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 0 20px rgba(133, 76, 230, 0.1);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  h2 {
    font-size: 42px;
    font-weight: 600;
    text-align: center;
    margin-bottom: 10px;
    color: #f2f3f4;
  }

  .subtitle {
    font-size: 18px;
    text-align: center;
    color: #b1b2b3;
    margin-bottom: 40px;
  }

  .achievements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    width: 100%;
  }

  .achievement-card {
    background: rgba(23, 23, 33, 0.8);
    border: 1px solid rgba(133, 76, 230, 0.3);
    border-radius: 16px;
    padding: 24px;
    transition: transform 0.3s ease;
  }

  .achievement-card:hover {
    transform: translateY(-5px);
  }

  .achievement-content h3 {
    font-size: 22px;
    color: #f2f3f4;
    margin-bottom: 8px;
  }

  .date {
    font-size: 14px;
    color: #854ce6;
    display: block;
    margin-bottom: 12px;
  }

  .achievement-content p {
    color: #b1b2b3;
    font-size: 16px;
    line-height: 1.5;
    margin-bottom: 16px;
  }

  .view-link {
    color: #854ce6;
    text-decoration: none;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    transition: color 0.3s ease;
  }

  .view-link:hover {
    color: #9c6feb;
  }

  @media (max-width: 768px) {
    h2 {
      font-size: 32px;
    }

    .subtitle {
      font-size: 16px;
    }

    .achievement-card {
      padding: 20px;
    }

    .achievement-content h3 {
      font-size: 20px;
    }
  }
</style>
